{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2015"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
